const char *desarrollad[] = {"ALVAREZ LUGO DARA","AVILES RAMOS ARISBETTH","NARVAEZ MARICHE EDGAR"};



void menu_principal(){
    bool repite = true;

    do{
    opcion =titulo();
    switch (opcion) {
        case 1:
            jugar();
            break;

         case 2:
            instrucciones();
            break;

         case 3:
            creditos();
            break;

         case 4:
            salir();
            repite = false;
            break;
      }
    }while(repite);

}

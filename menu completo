#include <iostream>
#include <windows.h>
#include<stdlib.h>

#define ARRIBA 'i'
#define ABAJO 'k'
#define ENTER 13

using namespace std;
char getch2 ()
{
   char c=0;
   DWORD modo, contador;
   HANDLE ih = GetStdHandle(STD_INPUT_HANDLE);

   // Desactivamos escritura en terminal
   SetConsoleMode (ih, modo & ~(ENABLE_ECHO_INPUT | ENABLE_LINE_INPUT));

   ReadConsoleA (ih, &c, 1, &contador, NULL);

   if (c == 0) {
      ReadConsoleA (ih, &c, 1, &contador, NULL);
   }

   SetConsoleMode (ih, modo); // Devolvemos control normal

   return c;
}

int gotoxy(USHORT x,USHORT y) {
   COORD cp = {x,y};
   SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), cp);
 }

int jugar();
int titulo();
int creditos();
int instrucciones();
void salir();
bool repite = true;
int tecla;
int opcion;
int n = 4;
int opcionSeleccionada = 1;
const char *opciones[] = {"JUGAR","INSTRUCIONES","CREDITOS","SALIR"};




void menu_principal(){
    bool repite = true;

    do{
    opcion =titulo();
    switch (opcion) {
        case 1:
            jugar();
            break;

         case 2:
            instrucciones();
            break;

         case 3:
            creditos();
            break;

         case 4:
            salir();
            repite = false;
            break;
      }
    }while(repite);

}
int jugar(){

}
int creditos(){
    bool repite = true;
    system("cls");
    do{
        gotoxy(20, 18+ opcionSeleccionada); cout << "==>" << endl;
        system("color 0c");
        gotoxy(22, 4);cout<<  "                        __ __ __                " << endl;
        gotoxy(23, 5);cout<<  "   .----.----.-----.--|  |__|  |_.-----.-----. " << endl;
        gotoxy(24, 6);cout<<  "  |  __|   _|  -__|  _  |  |   _|  _  |__ --| " << endl;
        gotoxy(25, 7);cout<<" |____|__| |_____|_____|__|____|_____|_____|" << endl;

        gotoxy(35, 15);cout<< "ALVAREZ LUGO DARA" << endl;
        gotoxy(35, 16);cout<< "AVILES RAMOS ARISBETH" << endl;
        gotoxy(35, 17);cout<< "NARVAEZ MARICHE EDGAR" << endl;
        gotoxy(39, 21); cout << "MENU" << endl;

        do {
         tecla = getch2();
      } while (tecla != ARRIBA && tecla != ABAJO && tecla != ENTER);

       switch (tecla) {
            case ENTER:
                repite = false;
                titulo();
                break;
       }

        }while(repite);
    return creditos();
}
